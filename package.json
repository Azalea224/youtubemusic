{
  "name": "youtube-music-client",
  "private": true,
  "version": "0.1.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:1420 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "discord-rich-presence": "^0.0.8"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.youtube-music.client",
    "productName": "YouTube Music",
    "directories": {
      "output": "release"
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Audio",
      "maintainer": "YouTube Music Client <noreply@example.com>"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.music"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "plugins/**/*"
    ],
    "extraResources": [
      {
        "from": "plugins",
        "to": "plugins"
      }
    ]
  },
  "description": "YouTube Music desktop client with plugins and Discord Rich Presence",
  "homepage": "https://github.com/Azalea224/youtubemusic",
  "author": "Azalea224"
}